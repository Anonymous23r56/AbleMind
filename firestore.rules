/**
 * @fileoverview Firestore Security Rules for AbleMind application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for all data.
 *
 * Data Structure:
 * Data is nested under /users/{userId}, with sessions and challenges as subcollections.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - All write operations require a verified, signed-in user.
 *
 * Denormalization for Authorization:
 *  - The `userId` is present in the path for all documents, eliminating the need for extra document reads for authorization.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages user profile access.
     * @path /users/{userId}
     * @allow (create) - Authenticated user can create their own profile.
     * @allow (get) - Authenticated user can get their own profile.
     * @allow (update) - Authenticated user can update their own profile.
     * @allow (delete) - Authenticated user can delete their own profile.
     * @principle Enforces strict document ownership for all operations.
     */
    match /users/{userId} {
      // Function to check if the user is signed in
      function isSignedIn() {
        return request.auth != null;
      }

      // Function to check if the requested userId matches the authenticated user's UID
      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      // Function to check if the user is signed in and is the owner of existing data.
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // Users should not be able to list other users.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages user session data.
     * @path /users/{userId}/sessions/{sessionId}
     * @allow (create, get, list, update, delete) - Authenticated user can manage sessions under their own profile.
     * @principle Enforces document ownership for writes; inherits ownership from the user document path.
     */
    match /users/{userId}/sessions/{sessionId} {
      // Function to check if the requested userId matches the authenticated user's UID
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      // Function to check if the user is signed in and is the owner of existing data.
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages challenge data within user sessions.
     * @path /users/{userId}/sessions/{sessionId}/challenges/{challengeId}
     * @allow (create, get, list, update, delete) - Authenticated user can manage challenges within their own session.
     * @principle Enforces document ownership for writes; inherits ownership from the session document path.
     */
    match /users/{userId}/sessions/{sessionId}/challenges/{challengeId} {
      // Function to check if the requested userId matches the authenticated user's UID
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      
      // Function to check if the user is signed in and is the owner of existing data.
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.sessionId == sessionId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}
