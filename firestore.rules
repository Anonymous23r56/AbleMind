/**
 * @fileoverview Firestore Security Rules for AbleMind application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for most data. An `isAdmin` flag on a user's
 * document grants elevated privileges, such as the ability to read all user documents.
 *
 * Data Structure:
 * Data is nested under /users/{userId}, with sessions and challenges as subcollections.
 *
 * Key Security Decisions:
 * - Users can only access their own data, unless they are an admin.
 * - Admins can read all user profiles.
 * - All write operations require a verified, signed-in user.
 *
 * Denormalization for Authorization:
 *  -The `userId` is present in the path for sessions and challenges, eliminating the need to read user documents for authorization.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages user profile access.
     * @path /users/{userId}
     * @allow (create) - Authenticated user can create their own profile if the userId matches their auth UID.
     * @allow (get) - Authenticated user can get their profile, or an admin can get any profile.
     * @allow (list) - An admin can list all user profiles.
     * @allow (update, delete) - Authenticated user can update or delete their profile.
     * @principle Enforces document ownership for writes and admin-level access for reads.
     */
    match /users/{userId} {
      // Function to check if the user is signed in
      function isSignedIn() {
        return request.auth != null;
      }

      // Function to check if the requested userId matches the authenticated user's UID
      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      // Function to check if the user is signed in and is the owner of existing data.
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      // Function to check if the requesting user is an admin.
      function isAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      }

      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages user session data.
     * @path /users/{userId}/sessions/{sessionId}
     * @allow (create) - Authenticated user can create a session under their profile.
     * @allow (get, list, update, delete) - Authenticated user can get, list, update, or delete sessions under their profile.
     * @deny (create) - Denies creation if the userId does not match the auth UID.
     * @deny (update, delete) - Denies updating or deleting if the userId does not match the auth UID.
     * @principle Enforces document ownership for writes; inherits ownership from the user document.
     */
    match /users/{userId}/sessions/{sessionId} {
      // Function to check if the user is signed in
      function isSignedIn() {
        return request.auth != null;
      }

      // Function to check if the requested userId matches the authenticated user's UID
      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      // Function to check if the user is signed in and is the owner of existing data.
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages challenge data within user sessions.
     * @path /users/{userId}/sessions/{sessionId}/challenges/{challengeId}
     * @allow (create) - Authenticated user can create a challenge within their session.
     * @allow (get, list, update, delete) - Authenticated user can get, list, update, or delete challenges within their session.
     * @deny (create) - Denies creation if the userId does not match the auth UID.
     * @deny (update, delete) - Denies updating or deleting if the userId does not match the auth UID.
     * @principle Enforces document ownership for writes; inherits ownership from the session document.
     */
    match /users/{userId}/sessions/{sessionId}/challenges/{challengeId} {
      // Function to check if the user is signed in
      function isSignedIn() {
        return request.auth != null;
      }

      // Function to check if the requested userId matches the authenticated user's UID
      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      // Function to check if the user is signed in and is the owner of existing data.
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.sessionId == sessionId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}
